.bottom-box{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: baseline;
  background-color: #fff;
}
.bottom-box i{
  width: 100rpx;
  height: 60rpx;
  line-height: 1;
  text-align: center;
}
.bottom-box .btn{
  flex: 1;
  border-radius: 0;
  border: none;
  height: 100rpx;
  margin-top: 10rpx;
  color: #fff;
}

.bottom-box .btn::after{
  border-radius: 0;
}

.gary{
  background-color: gray;
}
.red{
  background-color: #F72A1A;
}